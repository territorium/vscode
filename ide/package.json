{
  "name": "tol-tools",
  "displayName": "TOL Server Tools",
  "description": "TOL server tools for VSCode",
  "version": "0.2.2",
  "publisher": "TOL",
  "icon": "logo.png",
  "repository": {
    "url": "https://github.com/territorium/vscode.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "TOL",
    "MDA",
    "smart.IO"
  ],
  "activationEvents": [
    "onLanguage:xml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "debug": [
        {
          "id": "serverExplorer",
          "name": "TOL Servers"
        }
      ]
    },
    "commands": [
      {
        "command": "LogServer.start",
        "title": "Start Log Server"
      },
      {
        "command": "LogServer.stop",
        "title": "Stop Log Server"
      },
      {
        "command": "LogServer.toggle",
        "title": "Pause/Resume Log Server Listening"
      },
      {
        "command": "LogServer.clear",
        "title": "Clear Log Server Output Channel"
      },
      {
        "command": "tol.refreshServerView",
        "title": "Refresh Servers",
        "category": "TOL",
        "icon": {
          "light": "icons/light/refresh.svg",
          "dark": "icons/dark/refresh.svg"
        }
      },
      {
        "command": "server.add",
        "title": "Add smart.IO Server",
        "category": "TOL",
        "icon": {
          "light": "icons/light/add.svg",
          "dark": "icons/dark/add.svg"
        }
      },
      {
        "command": "server.delete",
        "title": "Delete"
      },
      {
        "command": "server.start",
        "title": "Start",
        "icon": {
          "light": "icons/light/debug-start.svg",
          "dark": "icons/dark/debug-start.svg"
        }
      },
      {
        "command": "server.debug",
        "title": "Debug",
        "icon": {
          "light": "icons/light/debug-alt-small.svg",
          "dark": "icons/dark/debug-alt-small.svg"
        }
      },
      {
        "command": "server.restart",
        "title": "Restart",
        "icon": {
          "light": "icons/light/debug-restart.svg",
          "dark": "icons/dark/debug-restart.svg"
        }
      },
      {
        "command": "server.stop",
        "title": "Stop",
        "icon": {
          "light": "icons/light/debug-stop.svg",
          "dark": "icons/dark/debug-stop.svg"
        }
      },
      {
        "command": "server.admin",
        "title": "Open Administration Panel"
      },
      {
        "command": "server.app",
        "title": "Open Application"
      },
      {
        "command": "tomcat.package",
        "title": "Generate War Package from Current Folder"
      },
      {
        "command": "server.model",
        "title": "Select Model"
      },
      {
        "command": "tol.openServerFile",
        "title": "Open File",
        "icon": {
          "light": "icons/light/edit.svg",
          "dark": "icons/dark/edit.svg"
        }
      },
      {
        "command": "tol.openProjectFile",
        "title": "Open File",
        "icon": {
          "light": "icons/light/edit.svg",
          "dark": "icons/dark/edit.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "tol.refreshServerView",
          "when": "view == serverExplorer",
          "group": "navigation@0"
        },
        {
          "command": "server.add",
          "when": "view == serverExplorer",
          "group": "navigation@1"
        }
      ],
      "commandPalette": [
        {
          "command": "tol.refreshServerView"
        },
        {
          "command": "server.app",
          "when": "never"
        },
        {
          "command": "server.start",
          "when": "never"
        },
        {
          "command": "server.debug",
          "when": "never"
        },
        {
          "command": "server.restart",
          "when": "never"
        },
        {
          "command": "server.stop",
          "when": "never"
        },
        {
          "command": "server.admin",
          "when": "never"
        },
        {
          "command": "server.delete",
          "when": "never"
        },
        {
          "command": "server.model",
          "when": "never"
        },
        {
          "command": "tol.openServerFile",
          "when": "never"
        },
        {
          "command": "tol.openProjectFile",
          "when": "never"
        }
      ],
      "explorer/context": [],
      "view/item/context": [
        {
          "command": "server.debug",
          "when": "view == serverExplorer && viewItem && viewItem == idleserver",
          "group": "inline"
        },
        {
          "command": "server.start",
          "when": "view == serverExplorer && viewItem == idleserver",
          "group": "inline"
        },
        {
          "command": "server.restart",
          "when": "view == serverExplorer && viewItem == runningserver",
          "group": "inline"
        },
        {
          "command": "server.stop",
          "when": "view == serverExplorer && viewItem == runningserver",
          "group": "inline"
        },
        {
          "command": "server.app",
          "when": "view == serverExplorer && viewItem && viewItem == runningserver",
          "group": "tomcat@3"
        },
        {
          "command": "server.admin",
          "when": "view == serverExplorer && viewItem && viewItem == runningserver",
          "group": "tomcat@4"
        },
        {
          "command": "server.delete",
          "when": "view == serverExplorer && viewItem && viewItem == idleserver",
          "group": "tomcat@9"
        },
        {
          "command": "server.add",
          "when": "view == serverExplorer && !viewItem"
        },
        {
          "command": "server.model",
          "when": "view == serverExplorer && viewItem == model",
          "group": "model@1"
        }
      ]
    },
    "configuration": [
      {
        "id": "tol-web-extension",
        "title": "TOL Tools",
        "order": 22,
        "properties": {
          "LogServer.host": {
            "type": "string",
            "default": "localhost",
            "description": "The host address of the server."
          },
          "LogServer.port": {
            "type": "number",
            "default": 7755,
            "description": "The UDP port the server listens on."
          },
          "V8Debug.bin": {
            "type": "string",
            "default": "/opt/google/chrome/chrome",
            "description": "Chrome location"
          },
          "V8Debug.port": {
            "type": "integer",
            "default": 9222,
            "description": "Chrome debugger port"
          },
          "smartio.customEnv": {
            "type": "array",
            "items": {
              "type": "object",
              "title": "environment setting",
              "required": [
                "environmentVariable",
                "value"
              ],
              "properties": {
                "environmentVariable": {
                  "type": "string",
                  "minLength": 1,
                  "description": "Name of the environment variable to set."
                },
                "value": {
                  "type": "string",
                  "description": "Value of the environment variable to set."
                }
              }
            },
            "default": [],
            "description": "Specifies an array of environment variable names and values.",
            "scope": "window"
          }
        }
      }
    ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "name": "syslog-proc",
            "scope": "syslog-proc",
            "settings": {
              "foreground": "#555"
            }
          },
          {
            "name": "syslog-level.FATAL",
            "scope": "syslog-level.FATAL",
            "settings": {
              "fontStyle": "bold",
              "foreground": "#a00"
            }
          },
          {
            "name": "syslog-level.ERROR",
            "scope": "syslog-level.ERROR",
            "settings": {
              "fontStyle": "bold",
              "foreground": "#a00"
            }
          },
          {
            "name": "syslog-level.WARN",
            "scope": "syslog-level.WARN",
            "settings": {
              "fontStyle": "bold",
              "foreground": "#bb0"
            }
          },
          {
            "name": "syslog-level.INFO",
            "scope": "syslog-level.INFO",
            "settings": {
              "fontStyle": "bold",
              "foreground": "#55f"
            }
          },
          {
            "name": "syslog-level.CONFIG",
            "scope": "syslog-level.CONFIG",
            "settings": {
              "fontStyle": "bold underline",
              "foreground": "#55f"
            }
          },
          {
            "name": "syslog-level.DEBUG",
            "scope": "syslog-level.SUCCESS",
            "settings": {
              "fontStyle": "bold",
              "foreground": "#000"
            }
          },
          {
            "name": "syslog-level.TRACE",
            "scope": "syslog-level.TRACE",
            "settings": {
              "fontStyle": "bold",
              "foreground": "#000"
            }
          }
        ]
      }
    },
    "languages": [
      {
        "id": "SYSLOG",
        "extensions": [
          ".log"
        ],
        "icon": {
          "dark": "icon.png",
          "light": "icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "SYSLOG",
        "scopeName": "source.output",
        "path": "./log.tmlanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "@types/mocha": "^10.0.6",
    "@types/fs-extra": "^11.0.4",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "fs-extra": "^11.2.0"
  }
}